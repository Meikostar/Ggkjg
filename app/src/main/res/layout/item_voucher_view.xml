<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bj_100dp"
    android:background="@color/my_color_F6F6F6"
    android:orientation="vertical"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/ll_item_shop_cart_content_view"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_marginLeft="13dp"
            android:layout_width="120dp"
            android:layout_height="90dp">
            <ImageView
                android:background="@drawable/voucher_blue_ritht"
                android:id="@+id/iv_item_shop_cart_cover"
                android:layout_width="120dp"
                android:layout_height="90dp"
                android:layout_gravity="center_vertical"
                android:scaleType="centerCrop" />
            <LinearLayout
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_money"
                        android:paddingBottom="3dp"
                        android:layout_gravity="bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥"
                        android:textColor="#fff"
                        android:textSize="@dimen/wz_20sp" />

                    <TextView
                        android:id="@+id/tv_sum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10"
                        android:textColor="@color/my_color_white"
                        android:textSize="30sp" />
                </LinearLayout>

                <TextView
                    android:layout_below="@+id/tv_title"
                    android:id="@+id/tv_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:singleLine="true"
                    android:text="满1000可用"
                    android:textColor="@color/my_color_white"
                    android:textSize="@dimen/wz_12sp" />
            </LinearLayout>
        </FrameLayout>


        <RelativeLayout
            android:background="@drawable/voucher_black_left"

            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginRight="12dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginLeft="13dp"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_tle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="200dp"
                    android:maxLines="1"
                    android:text="苹果X8 128G  "
                    android:textColor="#2b2b2b"
                    android:textSize="@dimen/wz_13sp" />

                <TextView
                    android:layout_below="@+id/tv_tle"
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="12dp"
                    android:text="有效期： 2019年12月13日"
                    android:textColor="@color/my_color_aaaaaa"
                    android:textSize="@dimen/wz_11sp" />
            </LinearLayout>

            <TextView

                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_item_blue_buy_3"
                android:id="@+id/tv_tobuy"
                android:layout_width="wrap_content"
                android:minWidth="@dimen/bj_51dp"
                android:layout_height="26dp"
                android:padding="@dimen/dp_4"
                android:gravity="center"
                android:text="使用"
                android:textColor="@color/my_color_white"
                android:textSize="@dimen/wz_13sp" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>