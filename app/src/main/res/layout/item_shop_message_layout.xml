<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/my_color_white"
    android:orientation="horizontal"
    android:padding="@dimen/bj_10dp">

    <ImageView
        android:id="@+id/iv_item_home_img"
        android:layout_width="@dimen/bj_100dp"
        android:layout_height="70dp"
        android:scaleType="fitXY"
        android:src="@mipmap/img_default_1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="@dimen/bj_10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item_shop_message_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="标题"
            android:textColor="@color/my_color_333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_item_shop_message_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:text="2019-01-21 16:09:06"
            android:textColor="@color/my_color_aaaaaa"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_item_shop_message_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:maxLines="2"
            android:text="正文内容"
            android:textColor="@color/my_color_aaaaaa"
            android:textSize="13sp" />
    </LinearLayout>

</LinearLayout>