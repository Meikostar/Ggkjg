<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/my_color_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="发货与到货时间"
            android:textColor="@color/my_color_333333"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/iv_dialog_deliver_detail_clean"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@mipmap/search_item_clean" />
    </RelativeLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/my_color_EBEBEB" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/bj_18dp"
        android:orientation="horizontal">

        <com.shehuan.niv.NiceImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/bj_15dp"
            android:src="@color/my_color_008CD6"
            app:corner_radius="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/bj_10dp"
            android:gravity="center"
            android:text="发货时间"
            android:textColor="@color/my_color_333333"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/bj_30dp"
        android:gravity="center"
        android:text="3-5日发货"
        android:textColor="@color/my_color_333333"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/bj_18dp"
        android:orientation="horizontal">

        <com.shehuan.niv.NiceImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/bj_15dp"
            android:src="@color/my_color_008CD6"
            app:corner_radius="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/bj_10dp"
            android:gravity="center"
            android:text="到货时间"
            android:textColor="@color/my_color_333333"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/bj_30dp"
        android:gravity="center"
        android:text="商家发货后，承若7-14个工作日到货"
        android:textColor="@color/my_color_333333"
        android:textSize="14sp" />

    <Button
        android:id="@+id/iv_dialog_deliver_detail_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_45dp"
        android:layout_marginTop="20dp"
        android:background="@color/my_color_008CD6"
        android:gravity="center"
        android:text="确 定"
        android:textColor="@color/my_color_white"
        android:textSize="@dimen/wz_15sp" />


</LinearLayout>