<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_color_f2f2f2"
    android:orientation="vertical">

    <include layout="@layout/action_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/bj_15dp"
        android:layout_marginTop="@dimen/bj_30dp"
        android:layout_marginRight="@dimen/bj_15dp"
        android:background="@drawable/bg_white_shape"
        android:orientation="vertical"
        android:paddingBottom="@dimen/bj_24dp">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/bj_15dp"
            android:layout_marginRight="@dimen/bj_15dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/bj_10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥"
                    android:textColor="@color/my_color_black"
                    android:textSize="@dimen/wz_23sp" />

                <com.ggkjg.view.widgets.ClearEditText
                    android:id="@+id/ed_money"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/bj_40dp"
                    android:layout_marginLeft="@dimen/bj_5dp"
                    android:background="@android:color/transparent"
                    android:hint="请输入金额"
                    android:inputType="numberDecimal"
                    android:singleLine="true"
                    android:textColor="@color/my_color_black"
                    android:textColorHint="@color/my_color_8b8b8b"
                    android:textSize="26sp" />
            </LinearLayout>

            <ImageView
                style="@style/line_1"
                android:layout_marginTop="@dimen/bj_5dp" />

            <LinearLayout
                android:id="@+id/ll_recharge_weixin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bj_45dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/bj_24dp"
                    android:layout_height="@dimen/bj_24dp"
                    android:src="@mipmap/icon_pay_wx" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/bj_5dp"
                    android:layout_weight="1"
                    android:text="微信支付"
                    android:textColor="@color/my_color_333333"
                    android:textSize="@dimen/wz_15sp" />

                <ImageView
                    android:id="@+id/img_recharge_wpy"
                    android:layout_width="@dimen/bj_17dp"
                    android:layout_height="@dimen/bj_17dp"
                    android:src="@drawable/radio_select_state" />
            </LinearLayout>

            <ImageView style="@style/line_1" />

            <LinearLayout
                android:id="@+id/ll_recharge_alipay"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bj_45dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/bj_24dp"
                    android:layout_height="@dimen/bj_24dp"
                    android:src="@mipmap/icon_pay_zfb" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/bj_5dp"
                    android:layout_weight="1"
                    android:text="支付宝"
                    android:textColor="@color/my_color_333333"
                    android:textSize="@dimen/wz_15sp" />

                <ImageView
                    android:id="@+id/img_recharge_alipay"
                    android:layout_width="@dimen/bj_17dp"
                    android:layout_height="@dimen/bj_17dp"
                    android:src="@drawable/radio_select_state" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_recharge_sure"
                style="@style/btn_confirm"
                android:layout_marginTop="@dimen/bj_40dp"
                android:text="确认充值" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>