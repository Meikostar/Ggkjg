<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/iv_item_home_push"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/my_color_white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_item_home_img"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@mipmap/img_default_6" />

    <TextView
        android:id="@+id/tv_item_home_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/bj_10dp"
        android:singleLine="true"
        android:text="产品标题"
        android:textColor="@color/my_color_333333"
        android:textSize="@dimen/wz_15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/bj_10dp"
        android:layout_marginTop="@dimen/bj_5dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/bj_17dp"
            android:layout_height="@dimen/bj_17dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/home_gold" />

        <TextView
            android:id="@+id/tv_item_home_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/bj_10dp"
            android:singleLine="true"
            android:text="00.00"
            android:textColor="@color/my_color_F32F12"
            android:textSize="@dimen/wz_15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/bj_5dp"
        android:layout_marginLeft="@dimen/bj_10dp"
        android:layout_marginTop="@dimen/bj_5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_item_home_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="2000条评论"
            android:textColor="@color/my_color_A7A7A7"
            android:textSize="@dimen/wz_12sp" />

        <TextView
            android:id="@+id/tv_item_home_comments_scale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/bj_20dp"
            android:singleLine="true"
            android:text="80%好评"
            android:textColor="@color/my_color_A7A7A7"
            android:textSize="@dimen/wz_12sp" />
    </LinearLayout>

</LinearLayout>