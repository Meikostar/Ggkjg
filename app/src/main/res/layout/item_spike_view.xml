<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bj_136dp"
    android:background="@color/my_color_white"
    android:orientation="vertical"
    android:paddingBottom="1dp">

    <LinearLayout
        android:layout_weight="1"
        android:id="@+id/ll_item_shop_cart_content_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <ImageView
            android:layout_marginLeft="13dp"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/iv_item_shop_cart_cover"
            android:layout_width="108dp"
            android:layout_height="116dp"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop"
            android:src="@mipmap/img_default_1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:maxLines="2"
                android:text="苹果X8 128G  玫瑰金"
                android:textColor="@color/my_color_black"
                android:textSize="@dimen/wz_15sp" />

            <TextView
                android:id="@+id/tv_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="52dp"
                android:text="6折"
                android:textColor="@color/my_color_red23"
                android:textSize="@dimen/wz_12sp"
                android:textStyle="bold" />
            <RelativeLayout
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="64dp">
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:id="@+id/ll_price"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/bj_17dp"
                        android:layout_height="@dimen/bj_17dp"
                        android:src="@mipmap/home_gold" />
                    <TextView
                        android:layout_marginLeft="3dp"
                         android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="135"
                        android:textColor="@color/my_color_red23"
                        android:textSize="23sp" />
                    <FrameLayout

                        android:paddingTop="6dp"
                        android:layout_marginLeft="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_first_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:text="￥298"
                            android:textColor="@color/my_color_999999"
                            android:textSize="@dimen/wz_12sp" />
                        <View
                            android:id="@+id/line"
                            android:layout_marginTop="8dp"
                            android:layout_width="@dimen/bj_44dp"
                            android:layout_height="@dimen/bj_1dp"
                            android:background="@color/my_color_999999"/>

                    </FrameLayout>

                </LinearLayout>
                <com.ggkjg.view.widgets.SaleProgressView
                    android:layout_marginTop="3dp"
                    android:layout_below="@+id/ll_price"
                    android:id="@+id/spv"
                    android:layout_width="113dp"
                    android:layout_height="14dp"
                    app:nearOverText="@string/nearOverText"
                    app:overText="@string/overText"
                    />

                <TextView
                    android:id="@+id/tv_tobuy"
                    android:layout_width="68dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="3dp"
                    android:layout_marginBottom="11dp"
                    android:background="@drawable/bg_item_blue_buy"
                    android:gravity="center"
                    android:text="去抢购"
                    android:textColor="@color/my_color_white"
                    android:textSize="@dimen/wz_13sp" />
            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_marginRight="@dimen/bj_14dp"
        android:layout_marginLeft="@dimen/bj_14dp"
        android:id="@+id/lines"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eeeeee"/>

</LinearLayout>