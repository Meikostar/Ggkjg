<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_color_F6F6F6"
    android:orientation="vertical">

    <include layout="@layout/action_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/bj_10dp"
        android:background="@color/my_color_white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/bj_15dp"
        android:paddingRight="@dimen/bj_15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="昵称:"
            android:textColor="@color/my_color_212121"
            android:textSize="@dimen/wz_14sp" />

        <EditText
            android:id="@+id/et_setting_nickname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请输入昵称"
            android:maxLength="10"
            android:paddingLeft="@dimen/bj_10dp"
            android:singleLine="true"
            android:textColor="@color/my_color_010000"
            android:textColorHint="@color/my_color_999999"
            android:textSize="@dimen/wz_14sp" />


    </LinearLayout>

    <Button
        android:id="@+id/btn_setting_sure"
        style="@style/btn_confirm"
        android:layout_marginLeft="@dimen/bj_15dp"
        android:layout_marginTop="@dimen/bj_40dp"
        android:layout_marginRight="@dimen/bj_15dp"
        android:text="确 定"
        android:textColor="@color/my_color_white"
        android:textSize="@dimen/wz_14sp" />

</LinearLayout>