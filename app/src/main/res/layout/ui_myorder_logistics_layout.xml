<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_color_white"
    android:orientation="vertical">

    <include layout="@layout/action_bar" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/bj_10dp"
                android:background="@color/my_color_f2f2f2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/my_color_white"
                android:orientation="vertical"
                android:padding="@dimen/bj_15dp">


                <TextView
                    android:id="@+id/tv_logistics_express_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/my_color_999999"
                    android:textSize="@dimen/wz_14sp" />

                <TextView
                    android:id="@+id/tv_logistics_express_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_logistics_express_name"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/bj_8dp"
                    android:textColor="@color/my_color_999999"
                    android:textSize="@dimen/wz_14sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/bj_10dp"
                android:background="@color/my_color_f2f2f2" />


            <android.support.v7.widget.RecyclerView
                android:id="@+id/recy_logistics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/bj_10dp"
                android:focusableInTouchMode="false"
                android:nestedScrollingEnabled="false" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>