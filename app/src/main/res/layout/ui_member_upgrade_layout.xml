<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_color_white"
    android:orientation="vertical">

    <include layout="@layout/action_bar" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/bj_15dp"
                android:layout_marginTop="@dimen/bj_24dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/bj_5dp"
                    android:layout_height="@dimen/bj_15dp"
                    android:background="@color/my_color_008CD6" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/bj_8dp"
                    android:text="当前会员等级"
                    android:textColor="@color/my_color_333333"
                    android:textSize="@dimen/wz_18sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/bj_75dp"
                android:layout_marginLeft="@dimen/bj_10dp"
                android:layout_marginTop="@dimen/bj_5dp"
                android:layout_marginRight="@dimen/bj_10dp"
                android:background="@drawable/bg_blue_shadow">

                <com.shehuan.niv.NiceImageView
                    android:id="@+id/img_user_header"
                    android:layout_width="@dimen/bj_50dp"
                    android:layout_height="@dimen/bj_50dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/bj_14dp"
                    android:layout_marginRight="@dimen/bj_15dp"
                    android:src="@mipmap/user_default_icon"
                    app:is_circle="true" />

                <TextView
                    android:id="@+id/tv_user_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/img_user_header"
                    android:layout_toRightOf="@id/img_user_header"
                    android:textColor="@color/my_color_333333"
                    android:textSize="@dimen/wz_17sp" />

                <ImageView
                    android:id="@+id/img_user_level"
                    android:layout_width="@dimen/bj_15dp"
                    android:layout_height="@dimen/bj_15dp"
                    android:layout_below="@id/tv_user_nickname"
                    android:layout_toRightOf="@id/img_user_header"
                    android:layout_marginTop="@dimen/bj_3dp"
                   />

                <TextView
                    android:id="@+id/tv_user_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_user_nickname"
                    android:layout_marginLeft="@dimen/bj_5dp"
                    android:layout_toRightOf="@id/img_user_level"
                    android:textColor="@color/my_color_333333"
                    android:textSize="@dimen/wz_15sp"
                     />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/bj_15dp"
                android:layout_marginTop="@dimen/bj_20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/bj_5dp"
                    android:layout_height="@dimen/bj_15dp"
                    android:background="@color/my_color_008CD6" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/bj_8dp"
                    android:text="选择您想提升的会员等级"
                    android:textColor="@color/my_color_333333"
                    android:textSize="@dimen/wz_18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/bj_10dp"
                android:layout_marginTop="@dimen/bj_5dp"
                android:layout_marginRight="@dimen/bj_10dp"
                android:background="@drawable/bg_blue_shadow"
                android:orientation="vertical"
                android:paddingLeft="@dimen/bj_25dp"
                android:paddingTop="@dimen/bj_20dp"
                android:paddingRight="@dimen/bj_25dp"
                android:paddingBottom="@dimen/bj_20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/bj_30dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_level_1"
                        android:layout_width="@dimen/bj_15dp"
                        android:layout_height="@dimen/bj_15dp"
                        android:src="@drawable/radio_select_state" />

                    <TextView
                        android:id="@+id/tv_level_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/bj_20dp"
                        android:text="店主"
                        android:textColor="@color/my_color_333333"
                        android:textSize="@dimen/wz_15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/bj_10dp"
                        android:text="（会员拥有线下实体店铺）"
                        android:textColor="@color/my_color_999999"
                        android:textSize="@dimen/wz_12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/bj_30dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_level_2"
                        android:layout_width="@dimen/bj_15dp"
                        android:layout_height="@dimen/bj_15dp"
                        android:src="@drawable/radio_select_state" />

                    <TextView
                        android:id="@+id/tv_level_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/bj_20dp"
                        android:text="创客"
                        android:textColor="@color/my_color_333333"
                        android:textSize="@dimen/wz_15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/bj_10dp"
                        android:text="（会员无线下实体店铺）"
                        android:textColor="@color/my_color_999999"
                        android:textSize="@dimen/wz_12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/bj_30dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_level_3"
                        android:layout_width="@dimen/bj_15dp"
                        android:layout_height="@dimen/bj_15dp"
                        android:src="@drawable/radio_select_state" />

                    <TextView
                        android:id="@+id/tv_level_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/bj_20dp"
                        android:text="城市运营中心"
                        android:textColor="@color/my_color_333333"
                        android:textSize="@dimen/wz_15sp" />


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/bj_15dp"
                android:layout_marginTop="@dimen/bj_20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/bj_5dp"
                    android:layout_height="@dimen/bj_15dp"
                    android:background="@color/my_color_008CD6" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/bj_8dp"
                    android:text="联系方式"
                    android:textColor="@color/my_color_333333"
                    android:textSize="@dimen/wz_18sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/bj_10dp"
                android:layout_marginRight="@dimen/bj_10dp"
                android:background="@drawable/bg_blue_shadow"
                android:orientation="vertical"
                android:paddingLeft="@dimen/bj_20dp"
                android:paddingTop="@dimen/bj_30dp"
                android:paddingRight="@dimen/bj_20dp"
                android:paddingBottom="@dimen/bj_30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/bj_45dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="@color/my_color_008CD6"
                        android:textSize="@dimen/wz_15sp" />

                    <TextView
                        android:layout_width="@dimen/bj_80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/bj_5dp"
                        android:text="真实姓名"
                        android:textColor="@color/my_color_333333"
                        android:textSize="@dimen/wz_15sp" />

                    <EditText
                        android:id="@+id/ed_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"
                        android:hint="请输入真实姓名"
                        android:textSize="@dimen/wz_15sp"
                        android:textColor="@color/my_color_333333"
                        android:textColorHint="@color/my_color_cccccc" />
                </LinearLayout>

                <ImageView style="@style/line_1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/bj_45dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="@color/my_color_008CD6"
                        android:textSize="@dimen/wz_15sp" />

                    <TextView
                        android:layout_width="@dimen/bj_80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/bj_5dp"
                        android:text="联系电话"
                        android:textColor="@color/my_color_333333"
                        android:textSize="@dimen/wz_15sp" />

                    <EditText
                        android:id="@+id/ed_phone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"
                        android:hint="请输入联系电话"
                        android:textSize="@dimen/wz_15sp"
                        android:textColor="@color/my_color_333333"
                        android:textColorHint="@color/my_color_cccccc" />
                </LinearLayout>

                <ImageView style="@style/line_1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/bj_45dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="@color/my_color_008CD6"
                        android:textSize="@dimen/wz_15sp" />

                    <TextView
                        android:layout_width="@dimen/bj_80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/bj_5dp"
                        android:text="微信"
                        android:textColor="@color/my_color_333333"
                        android:textSize="@dimen/wz_15sp" />

                    <EditText
                        android:id="@+id/ed_wx"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"
                        android:hint="请输入微信号"
                        android:textSize="@dimen/wz_15sp"
                        android:textColor="@color/my_color_333333"
                        android:textColorHint="@color/my_color_cccccc" />
                </LinearLayout>

                <ImageView style="@style/line_1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/bj_45dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="@color/my_color_008CD6"
                        android:textSize="@dimen/wz_15sp" />

                    <TextView
                        android:layout_width="@dimen/bj_80dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/bj_5dp"
                        android:text="所在区域"
                        android:textColor="@color/my_color_333333"
                        android:textSize="@dimen/wz_15sp" />

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableRight="@mipmap/icon_arrow"
                        android:textColor="@color/my_color_008CD6"
                        android:textSize="@dimen/wz_15sp" />
                </LinearLayout>

                <ImageView style="@style/line_1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/bj_45dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="@color/my_color_008CD6"
                        android:textSize="@dimen/wz_15sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/bj_5dp"
                        android:text="备注信息"
                        android:textColor="@color/my_color_333333"
                        android:textSize="@dimen/wz_15sp" />

                </LinearLayout>


                <EditText
                    android:id="@+id/ed_remark"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="@dimen/bj_15dp"
                    android:background="@drawable/bg_white_gray_borde_shape"
                    android:gravity="left"
                    android:padding="@dimen/bj_5dp"
                    android:textColor="@color/my_color_333333"
                    android:textSize="@dimen/wz_15sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/btn_confirm"
                style="@style/btn_confirm"
                android:layout_marginLeft="@dimen/bj_15dp"
                android:layout_marginTop="@dimen/bj_35dp"
                android:layout_marginRight="@dimen/bj_15dp"
                android:layout_marginBottom="@dimen/bj_30dp"
                android:text="确认提交" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>