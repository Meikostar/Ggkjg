<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_color_F6F6F6"
    android:orientation="vertical">

    <include layout="@layout/action_bar" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/bj_20dp"
        android:background="@color/my_color_white"
        android:orientation="horizontal"
        android:paddingLeft="18dp"
        android:paddingRight="18dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="新手机号:"
            android:textColor="@color/my_color_010000"
            android:textSize="@dimen/wz_13sp" />

        <EditText
            android:id="@+id/ed_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请输入新手机号"
            android:inputType="number"
            android:paddingLeft="18dp"
            android:singleLine="true"
            android:textColor="@color/my_color_010000"
            android:textSize="@dimen/wz_13sp" />
    </LinearLayout>
    <!--分割线-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_1dp"
        android:background="@color/my_color_F6F6F6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_44dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/my_color_white"
        android:orientation="horizontal"
        android:paddingLeft="18dp"
        android:paddingRight="18dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center_vertical"
            android:text="图形验证码:"
            android:textColor="@color/my_color_010000"
            android:textSize="@dimen/wz_13sp" />

        <EditText
            android:id="@+id/ed_img_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="@null"
            android:hint="请输入图形验证码"
            android:singleLine="true"
            android:textColor="@color/my_color_010000"
            android:textSize="@dimen/wz_13sp" />

        <ImageView
            android:id="@+id/img_phone_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:src="@mipmap/get_img_update_default_1" />
    </LinearLayout>
    <!--分割线-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_1dp"
        android:background="@color/my_color_F6F6F6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_44dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/my_color_white"
        android:orientation="horizontal"
        android:paddingLeft="18dp"
        android:paddingRight="18dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center_vertical"
            android:text="短信验证码:"
            android:textColor="@color/my_color_010000"
            android:textSize="@dimen/wz_13sp" />

        <EditText
            android:id="@+id/ed_phone_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="@null"
            android:hint="请输入短信验证码"
            android:singleLine="true"
            android:textColor="@color/my_color_010000"
            android:textSize="@dimen/wz_13sp" />

        <TextView
            android:id="@+id/tv_get_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/my_color_010000"
            android:textSize="15sp" />
    </LinearLayout>
    <!--分割线-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_1dp"
        android:background="@color/my_color_F6F6F6" />

    <Button
        android:id="@+id/btn_update_phone_ok"
        style="@style/btn_confirm"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="@dimen/bj_49dp"
        android:layout_marginRight="15dp"
        android:text="确定"

        />

</LinearLayout>