<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_color_white"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_50dp">
        <ImageView
            android:id="@+id/actionbar_back"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:paddingRight="25dp"
            android:src="@mipmap/arrow_topbar"
            android:visibility="visible" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="广场"
            android:textColor="@color/my_color_333333"
            android:textSize="@dimen/wz_18sp" />

        <ImageView
            android:id="@+id/iv_home_square_editor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/bj_18dp"
            android:src="@mipmap/icon_editor" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/my_color_EBEBEB" />

    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/home_square_common_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_48dp"
        android:background="@color/my_color_white"
        tl:tl_iconVisible="false"
        tl:tl_indicator_color="@color/my_color_008CD6"
        tl:tl_indicator_width="@dimen/bj_44dp"
        tl:tl_textSelectColor="@color/my_color_008CD6"
        tl:tl_textUnselectColor="@color/my_color_212121"
        tl:tl_textsize="@dimen/sp_16" />

    <com.ggkjg.view.widgets.autoview.AutoViewPager
        android:id="@+id/home_square_vp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>