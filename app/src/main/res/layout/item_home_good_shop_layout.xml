<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="90dp"
    android:layout_height="wrap_content"
    android:background="@color/my_color_white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/tv_item_home_good_shop_img"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:src="@mipmap/img_default_5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/bj_5dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/home_gold" />

        <TextView
            android:id="@+id/tv_item_home_good_shop_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/bj_3dp"
            android:singleLine="true"
            android:text="00.00"
            android:textColor="@color/my_color_F32F12"
            android:textSize="@dimen/wz_15sp" />
    </LinearLayout>

</LinearLayout>