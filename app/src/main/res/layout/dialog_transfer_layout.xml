<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/my_color_white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/bj_15dp"
        android:paddingRight="@dimen/bj_15dp">


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bj_54dp"
            android:gravity="center"
            android:text="HKDT置换港豆"
            android:textColor="@color/my_color_212121"
            android:textSize="19sp" />

        <ImageView style="@style/line_1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/bj_15dp"
            android:text="置换数量："
            android:textColor="@color/my_color_212121"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/bj_55dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_transfer_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/my_color_008CD6"
                android:textSize="@dimen/wz_15sp" />

            <ImageView
                android:layout_width="@dimen/bj_27dp"
                android:layout_height="@dimen/bj_19dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/icon_transfer" />

            <TextView
                android:id="@+id/tv_transfer_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/my_color_008CD6"
                android:textSize="@dimen/wz_15sp" />
        </LinearLayout>

        <ImageView style="@style/line_1" />

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bj_48dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="手续费："
                android:textColor="@color/my_color_212121"
                android:textSize="@dimen/wz_15sp" />
            <ImageView
                android:layout_width="@dimen/bj_17dp"
                android:layout_height="@dimen/bj_17dp"
                android:src="@mipmap/home_gold"
                android:layout_marginRight="@dimen/bj_5dp"/>
            <TextView
                android:text=""
                android:id="@+id/tv_transfer_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/my_color_212121"
                android:textSize="@dimen/wz_15sp" />
        </LinearLayout>

        <ImageView style="@style/line_1" />

        <Button
            android:id="@+id/btn_confirm"
            style="@style/btn_confirm"
            android:layout_marginTop="@dimen/bj_25dp"
            android:layout_marginBottom="@dimen/bj_25dp"
            android:text="确定" />
    </LinearLayout>

    <ImageView
        android:id="@+id/btn_close"
        android:layout_width="@dimen/bj_50dp"
        android:layout_height="@dimen/bj_50dp"
        android:layout_alignParentRight="true"
        android:padding="@dimen/bj_12dp"
        android:src="@mipmap/icon_edit_tree_close" />
</RelativeLayout>