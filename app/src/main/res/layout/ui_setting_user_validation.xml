<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_color_f6f6f6"
    android:orientation="vertical">

    <include layout="@layout/action_bar" />

    <LinearLayout
        android:id="@+id/set_user_validation_view_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/bj_44dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/bj_10dp"
            android:background="@color/my_color_white"
            android:orientation="horizontal"
            android:paddingLeft="18dp"
            android:paddingRight="18dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="真实姓名"
                android:textColor="@color/my_color_010000"
                android:textSize="@dimen/wz_14sp" />

            <EditText
                android:id="@+id/et_set_user_validation_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="请填写真实姓名"
                android:paddingLeft="18dp"
                android:singleLine="true"
                android:textColor="@color/my_color_010000"
                android:textSize="@dimen/wz_13sp" />
        </LinearLayout>
        <!--分割线-->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/bj_1dp"
            android:background="@color/my_color_f2f2f2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/bj_45dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/my_color_white"
            android:orientation="horizontal"
            android:paddingLeft="18dp"
            android:paddingRight="18dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="身份证号"
                android:textColor="@color/my_color_010000"
                android:textSize="@dimen/wz_14sp" />

            <EditText
                android:id="@+id/et_set_user_validation_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="请填写身份证号"
                android:paddingLeft="18dp"
                android:singleLine="true"
                android:digits="0123456789qwertyuioplkjhgfdsazxcvbnmQWERTYUIOPLKJHGFDSAZXCVBNM"
                android:inputType="number"
                android:textColor="@color/my_color_010000"
                android:textSize="@dimen/wz_13sp" />
        </LinearLayout>

        <Button
            android:id="@+id/but_set_user_validation_next"
            style="@style/btn_confirm"
            android:layout_width="@dimen/bj_250dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/bj_15dp"
            android:text="下一步" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/set_user_validation_view_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/bj_40dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/bj_16dp"
            android:text="上传身份证"
            android:textColor="@color/my_color_8b8b8b"
            android:textSize="@dimen/wz_14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/my_color_white"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_card_1"
                android:layout_width="@dimen/bj_150dp"
                android:layout_height="@dimen/bj_100dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/id_card_1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/bj_5dp"
                android:text="正面相片"
                android:textColor="@color/my_color_8b8b8b"
                android:textSize="@dimen/wz_12sp" />
            <!--分割线-->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/bj_1dp"
                android:layout_margin="@dimen/bj_8dp"
                android:background="@color/my_color_f2f2f2" />

            <ImageView
                android:id="@+id/img_card_2"
                android:layout_width="@dimen/bj_150dp"
                android:layout_height="@dimen/bj_100dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/id_card_2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/bj_5dp"
                android:gravity="center_horizontal"
                android:text="背面相片"
                android:textColor="@color/my_color_8b8b8b"
                android:textSize="@dimen/wz_12sp" />
            <!--分割线-->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/bj_1dp"
                android:layout_margin="@dimen/bj_8dp"
                android:background="@color/my_color_f2f2f2" />

            <ImageView
                android:id="@+id/img_card_3"
                android:layout_width="@dimen/bj_150dp"
                android:layout_height="@dimen/bj_100dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/id_card_3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/bj_5dp"
                android:layout_marginBottom="@dimen/bj_5dp"
                android:text="手持身份证号"
                android:textColor="@color/my_color_8b8b8b"
                android:textSize="@dimen/wz_12sp" />
        </LinearLayout>

        <Button
            android:id="@+id/but_set_user_validation_submit"
            style="@style/btn_confirm"
            android:layout_width="@dimen/bj_250dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/bj_16dp"
            android:text="提交申请" />
    </LinearLayout>

</LinearLayout>