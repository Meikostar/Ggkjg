<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bj_60dp"
    android:background="@color/my_color_white"
    android:minHeight="@dimen/bj_60dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:paddingLeft="@dimen/bj_15dp">

        <TextView
            android:singleLine="true"
            android:layout_marginRight="100dp"
            android:id="@+id/tv_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/my_color_212121"
            android:textSize="@dimen/wz_15sp" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/bj_5dp"
            android:textColor="@color/my_color_999999"
            android:textSize="@dimen/wz_12sp" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical|right"
        android:paddingRight="15dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_width="100dp"
        android:layout_height="wrap_content">
        <TextView
            android:text="+100000"
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/my_color_212121"
            android:textSize="@dimen/wz_15sp" />
        <TextView
            android:id="@+id/tv_type"
            android:layout_marginTop="@dimen/bj_5dp"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="专用账户"
            android:textColor="#666666"
            android:textSize="13sp"
            android:gravity="right"
            />
    </LinearLayout>


    <ImageView
        style="@style/line_1"
        android:layout_alignParentBottom="true" />
</RelativeLayout>