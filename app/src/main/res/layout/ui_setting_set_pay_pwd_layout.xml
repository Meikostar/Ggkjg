<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_color_white"
    android:orientation="vertical">

    <include layout="@layout/action_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/bj_17dp"
        android:layout_marginRight="@dimen/bj_17dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/bj_30dp"
            android:gravity="center_vertical"
            android:text="设置支付密码"
            android:textColor="@color/my_color_010000"
            android:textSize="@dimen/wz_16sp" />

        <EditText
            android:id="@+id/et_set_pay_pwd_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bj_44dp"
            android:layout_marginTop="@dimen/bj_25dp"
            android:background="@null"
            android:hint="请输入密码(6位数字)"
            android:inputType="number"
            android:maxLength="6"
            android:singleLine="true"
            android:textColor="@color/my_color_010000"
            android:textSize="@dimen/wz_13sp" />
        <!--分割线-->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/bj_1dp"
            android:background="@color/my_color_f6f6f6" />

        <EditText
            android:id="@+id/et_set_pay_pwd_2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bj_44dp"
            android:background="@null"
            android:hint="请再次输入密码(6位数字)"
            android:inputType="number"
            android:maxLength="6"
            android:singleLine="true"
            android:textColor="@color/my_color_010000"
            android:textSize="@dimen/wz_13sp" />

        <!--分割线-->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/bj_1dp"
            android:background="@color/my_color_f6f6f6" />

        <Button
            android:id="@+id/btn_set_pay_pwd_ok"
            style="@style/btn_confirm"
            android:layout_marginTop="@dimen/bj_40dp"
            android:text="确定" />
    </LinearLayout>
</LinearLayout>