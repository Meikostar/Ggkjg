<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/acb_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_color_white"
    android:orientation="vertical">

    <include layout="@layout/action_bar" />

    <com.ggkjg.view.widgets.autoview.ObservableScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/bj_40dp"
            android:layout_marginRight="@dimen/bj_40dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="手机号"
                android:textColor="@color/my_color_333333"
                android:textSize="15sp"
                android:textStyle="bold" />

            <com.ggkjg.view.widgets.ClearEditText
                android:id="@+id/et_login_phone"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:background="@null"
                android:hint="请输入有效的手机号"
                android:inputType="number"
                android:maxLength="11"
                android:singleLine="true"
                android:textColor="@color/my_color_333333"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/my_color_EBEBEB" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="图形验证码"
                android:textColor="@color/my_color_333333"
                android:textSize="15sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.ggkjg.view.widgets.ClearEditText
                        android:id="@+id/et_register_img_code"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:background="@null"
                        android:inputType="number"
                        android:maxLength="4"
                        android:singleLine="true"
                        android:textColor="@color/my_color_333333"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/my_color_EBEBEB" />
                </LinearLayout>

                <com.shehuan.niv.NiceImageView
                    android:id="@+id/iv_register_img_code"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/bj_10dp"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@mipmap/get_img_update_default_1"
                    app:corner_bottom_left_radius="5dp"
                    app:corner_bottom_right_radius="5dp"
                    app:corner_top_left_radius="5dp"
                    app:corner_top_right_radius="5dp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="手机验证码"
                android:textColor="@color/my_color_333333"
                android:textSize="15sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.ggkjg.view.widgets.ClearEditText
                        android:id="@+id/et_register_msm_code"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:background="@null"
                        android:inputType="number"
                        android:maxLength="8"
                        android:singleLine="true"
                        android:textColor="@color/my_color_333333"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/my_color_EBEBEB" />
                </LinearLayout>

                <Button
                    android:id="@+id/but_register_sms"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/bj_10dp"
                    android:layout_marginBottom="@dimen/bj_4dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_welfare_blue_shape"
                    android:gravity="center"
                    android:text="获取验证码"
                    android:textColor="@color/my_color_008CD6"
                    android:textSize="@dimen/wz_15sp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="设置密码"
                android:textColor="@color/my_color_333333"
                android:textSize="15sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_register_passwords"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:background="@null"
                    android:hint="请输入密码"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textColor="@color/my_color_333333"
                    android:textColorHint="@color/my_color_aaaaaa"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/iv_input_pwd_status"
                    android:layout_width="23dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/login_chose" />
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/my_color_EBEBEB" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="推荐码"
                android:textColor="@color/my_color_333333"
                android:textSize="15sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/bj_40dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <com.ggkjg.view.widgets.ClearEditText
                    android:id="@+id/et_login_push_code"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/bj_45dp"
                    android:background="@null"
                    android:singleLine="true"
                    android:textColor="@color/my_color_333333"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/iv_register_scan_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/top_sweep_icon" />
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/my_color_EBEBEB" />

            <Button
                android:id="@+id/but_register_submit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bj_40dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/btn_confirm_shape"
                android:gravity="center"
                android:text="注 册"
                android:textColor="@color/my_color_white"
                android:textSize="@dimen/wz_15sp" />

            <TextView
                android:id="@+id/tv_register_login_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal"
                android:text="已有账号  直接登录"
                android:textColor="@color/my_color_666666"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="注册成功即代表您同意我们的"
                    android:textColor="@color/my_color_333333"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_register_agreement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="《用户协议》"
                    android:textColor="@color/my_color_008CD6"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

    </com.ggkjg.view.widgets.autoview.ObservableScrollView>

</LinearLayout>