<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bj_34dp"
    android:background="@color/my_color_white"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_header_img"
        android:layout_width="@dimen/bj_20dp"
        android:layout_height="@dimen/bj_20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="8dp"
        android:visibility="gone"
        android:background="@mipmap/icon_commodity_service" />

    <TextView
        android:id="@+id/tv_header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_marginLeft="10dp"
        android:text="商店名"
        android:textColor="@color/my_color_2e2e2e"
        android:textSize="@dimen/wz_13sp" />
</LinearLayout>