<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/my_color_white"
    android:orientation="vertical"
    android:padding="@dimen/bj_15dp">

    <ImageView
        android:id="@+id/tv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="@mipmap/search_item_clean" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/bj_5dp"
        android:text="请选择分享方式"
        android:textColor="@color/my_color_333333"
        android:textSize="@dimen/wz_13sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/bj_45dp"
        android:layout_marginBottom="@dimen/bj_20dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/ll_share_wx"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@mipmap/login_wechat"
            android:drawablePadding="@dimen/bj_10dp"
            android:gravity="center_horizontal"
            android:text="微信分享"
            android:textColor="@color/my_color_666666"
            android:textSize="@dimen/wz_12sp" />

        <TextView
            android:id="@+id/ll_share_wx_friend"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@mipmap/login_wechat_friend"
            android:drawablePadding="@dimen/bj_10dp"
            android:gravity="center_horizontal"
            android:text="微信朋友圈"
            android:textColor="@color/my_color_666666"
            android:textSize="@dimen/wz_12sp" />
    </LinearLayout>


</LinearLayout>