<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/bj_10dp"
    android:orientation="vertical"
    android:paddingTop="@dimen/bj_10dp"
    android:background="@color/my_color_white">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/bj_10dp"
        android:paddingRight="@dimen/bj_10dp">

        <com.shehuan.niv.NiceImageView
            android:id="@+id/iv_user_icon"
            android:layout_width="@dimen/bj_35dp"
            android:layout_height="@dimen/bj_35dp"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/img_default_1"
            app:is_circle="true"/>

        <TextView
            android:id="@+id/tv_user_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/bj_8dp"
            android:textColor="@color/my_color_212121"
            android:textSize="15sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_create_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:paddingLeft="@dimen/bj_10dp"
        android:paddingRight="@dimen/bj_10dp"
        android:textColor="@color/my_color_bfbfbf"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/tv_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:paddingLeft="@dimen/bj_10dp"
        android:paddingRight="@dimen/bj_10dp"
        android:textColor="@color/my_color_141414"
        android:textSize="@dimen/sp_14" />

    <LinearLayout
        android:id="@+id/ll_comment_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/bj_10dp"
        android:paddingLeft="@dimen/bj_10dp"
        android:paddingRight="@dimen/bj_10dp"
        android:paddingBottom="@dimen/bj_10dp">

        <ImageView
            android:id="@+id/img_commodity_1"
            android:layout_width="@dimen/bj_105dp"
            android:layout_height="@dimen/bj_105dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/img_default_1" />

        <ImageView
            android:id="@+id/img_commodity_2"
            android:layout_width="@dimen/bj_105dp"
            android:layout_height="@dimen/bj_105dp"
            android:layout_marginLeft="@dimen/bj_10dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/img_default_1" />

        <ImageView
            android:id="@+id/img_commodity_3"
            android:layout_width="@dimen/bj_105dp"
            android:layout_height="@dimen/bj_105dp"
            android:layout_marginLeft="@dimen/bj_10dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/img_default_1" />
    </LinearLayout>

    <ImageView
        style="@style/line_1"
        android:layout_marginTop="@dimen/bj_5dp" />

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/ll_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/bj_10dp"
        android:background="@color/my_color_f6f6f6">

        <ImageView
            android:id="@+id/img_commodity_item"
            android:layout_width="@dimen/bj_70dp"
            android:layout_height="@dimen/bj_70dp"
            android:layout_marginRight="@dimen/dp_10"
            android:scaleType="centerCrop"
            android:src="@mipmap/img_default_1" />

        <TextView
            android:id="@+id/tv_commodity_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_commodity_item"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/my_color_6E6E6E"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_commodity_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/img_commodity_item"
            android:layout_toRightOf="@id/img_commodity_item"
            android:ellipsize="end"
            android:textColor="@color/my_color_2e2e2e"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_commodity_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/img_commodity_item"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/bj_10dp"
            android:ellipsize="end"
            android:textColor="@color/my_color_2e2e2e"
            android:textSize="@dimen/sp_16" />
    </RelativeLayout>

</LinearLayout>