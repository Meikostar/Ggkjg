<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="102dp"
    android:gravity="center_horizontal"
    android:layout_height="153dp"
    android:background="@color/my_color_white"
    android:id="@+id/ll_bg"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="@dimen/bj_99dp"
        android:layout_height="@dimen/bj_99dp">
        <ImageView
            android:id="@+id/tv_item_home_good_shop_img"
            android:layout_width="@dimen/bj_99dp"
            android:layout_height="@dimen/bj_99dp"
            android:src="@mipmap/img_default_5" />

    </FrameLayout>

    <TextView
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:id="@+id/tv_title"
        android:layout_width="@dimen/bj_96dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/bj_3dp"
        android:singleLine="true"
        android:text="00.00"
        android:textColor="@color/my_color_333333"
        android:textSize="@dimen/wz_13sp" />
    <LinearLayout
        android:layout_marginBottom="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/bj_5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginLeft="2dp"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/home_gold" />

        <TextView
            android:layout_weight="1"
            android:id="@+id/tv_item_home_good_shop_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/bj_3dp"
            android:singleLine="true"
            android:text="10000"
            android:textColor="@color/my_color_F32F12"
            android:textSize="13.5sp" />
        <FrameLayout
            android:visibility="gone"
           android:layout_marginRight="2dp"
            android:layout_gravity="center_vertical|right"
            android:layout_marginLeft="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:maxLength="6"
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_gravity="right"
                android:text=""
                android:textColor="@color/my_color_999999"
                android:textSize="@dimen/wz_10sp" />

            <View
                android:visibility="gone"
                android:id="@+id/line"
                android:layout_width="30dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="@color/my_color_999999" />
        </FrameLayout>
    </LinearLayout>

</LinearLayout>