<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/my_color_white"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <ImageView
            android:id="@+id/iv_item_product_img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@mipmap/img_default_6" />
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_zone"
            android:background="@drawable/home_zone_bg"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:minWidth="@dimen/bj_54dp"
            android:layout_width="@dimen/bj_82dp"
            android:layout_height="@dimen/bj_30dp">
            <TextView
                android:gravity="center"
                android:textColor="@color/my_color_white"
                android:textSize="@dimen/wz_13sp"
                android:layout_width="wrap_content"
                android:text="可用"
                android:layout_marginLeft="3dp"
                android:layout_height="@dimen/bj_20dp"/>
            <TextView
                android:id="@+id/tv_cout"
                android:singleLine="true"
                android:gravity="center"
                android:textColor="#ffff33"
                android:textSize="@dimen/wz_13sp"
                android:layout_width="wrap_content"
                android:text="477港券"
                android:layout_height="@dimen/bj_20dp"/>
        </LinearLayout>

    </FrameLayout>
    <TextView
        android:id="@+id/tv_item_product_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/bj_10dp"
        android:singleLine="true"
        android:text="产品标题"
        android:textColor="@color/my_color_333333"
        android:textSize="@dimen/wz_15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/bj_10dp"
        android:layout_marginTop="@dimen/bj_5dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/home_gold" />

        <TextView
            android:id="@+id/tv_item_product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/bj_5dp"
            android:singleLine="true"
            android:text="00.00"
            android:textColor="@color/my_color_F32F12"
            android:textSize="@dimen/wz_15sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/bj_5dp"
        android:layout_marginLeft="@dimen/bj_10dp"
        android:layout_marginTop="@dimen/bj_5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_item_product_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="2000条评论"
            android:textColor="@color/my_color_A7A7A7"
            android:textSize="@dimen/wz_12sp" />

        <TextView
            android:id="@+id/tv_item_product_comments_scale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/bj_20dp"
            android:singleLine="true"
            android:text="80%好评"
            android:textColor="@color/my_color_A7A7A7"
            android:textSize="@dimen/wz_12sp" />
    </LinearLayout>

</LinearLayout>