<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/mian_content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/mian_bottom_tabs_layout" />

    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/mian_bottom_tabs_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/my_color_white"
        tl:tl_iconGravity="TOP"
        tl:tl_iconHeight="22dp"
        tl:tl_iconMargin="4dp"
        tl:tl_iconWidth="22dp"
        tl:tl_indicator_color="@color/my_color_008CD6"
        tl:tl_indicator_height="0dp"
        tl:tl_textSelectColor="@color/my_color_008CD6"
        tl:tl_textUnselectColor="@color/my_color_aaaaaa"
        tl:tl_textsize="10sp" />
</RelativeLayout>