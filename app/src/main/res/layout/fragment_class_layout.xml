<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F1F1F1"
    android:orientation="vertical">

    <include layout="@layout/header_calss_top_search_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_one"
            android:layout_width="@dimen/bj_86dp"
            android:layout_height="match_parent"
            android:background="@color/my_color_white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.youth.banner.Banner
                android:id="@+id/banner"
                android:layout_marginLeft="@dimen/bj_10dp"
                android:layout_marginRight="@dimen/bj_10dp"
                android:layout_marginTop="@dimen/bj_10dp"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                app:indicator_drawable_selected="@drawable/banner_tab_normal"
                app:indicator_drawable_unselected="@drawable/banner_tab_press"
                app:indicator_height="3dp"
                app:indicator_margin="3dp"
                app:indicator_width="3dp"
                app:image_scale_type="fit_xy"
                android:focusable="true"/>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_two"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>