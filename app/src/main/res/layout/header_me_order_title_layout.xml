<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/bj_55dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/bj_5dp"
        android:paddingRight="@dimen/bj_5dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_me_order1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/me_order_1"
            android:drawablePadding="@dimen/bj_5dp"
            android:gravity="center"
            android:text="待付款"
            android:textColor="@color/my_color_333333"
            android:textSize="@dimen/wz_12sp" />

        <TextView
            android:id="@+id/tv_me_order2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/me_order_2"
            android:drawablePadding="@dimen/bj_5dp"
            android:gravity="center"
            android:text="待发货"
            android:textColor="@color/my_color_333333"
            android:textSize="@dimen/wz_12sp" />

        <TextView
            android:id="@+id/tv_me_order3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/me_order_3"
            android:drawablePadding="@dimen/bj_5dp"
            android:gravity="center"
            android:text="待收货"
            android:textColor="@color/my_color_333333"
            android:textSize="@dimen/wz_12sp" />

        <TextView
            android:id="@+id/tv_me_order4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/me_order_4"
            android:drawablePadding="@dimen/bj_5dp"
            android:gravity="center"
            android:text="待评论"
            android:textColor="@color/my_color_333333"
            android:textSize="@dimen/wz_12sp" />
       
    </LinearLayout>

</LinearLayout>