<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#11ffffff">

    <RelativeLayout
        android:layout_width="@dimen/bj_180dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_white_shape"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_recharge_close"
            android:layout_width="@dimen/bj_28dp"
            android:layout_height="@dimen/bj_28dp"
            android:layout_alignParentRight="true"
            android:paddingTop="@dimen/bj_5dp"
            android:paddingRight="@dimen/bj_5dp"
            android:src="@mipmap/icon_edit_tree_close" />

        <ImageView
            android:id="@+id/img_recharge_logo"
            android:layout_width="@dimen/bj_50dp"
            android:layout_height="@dimen/bj_44dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/bj_25dp"
            android:src="@mipmap/icon_recharge_success" />

        <TextView
            android:id="@+id/tv_recharge_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_recharge_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/bj_15dp"
            android:layout_marginBottom="@dimen/bj_20dp"
            android:text="支付成功"
            android:textColor="@color/my_color_5CB146"
            android:textSize="@dimen/wz_16sp"
             />
    </RelativeLayout>
</RelativeLayout>