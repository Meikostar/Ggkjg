<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_color_white"
    android:orientation="vertical">

    <include layout="@layout/action_bar" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/my_color_EBEBEB" />

    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/commonTabLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_48dp"
        tl:tl_iconVisible="false"
        tl:tl_indicator_color="@color/my_color_008CD6"
        tl:tl_textSelectColor="@color/my_color_008CD6"
        tl:tl_textUnselectColor="@color/my_color_333333"
        tl:tl_textsize="15sp" />

    <com.ggkjg.view.widgets.autoview.AutoViewPager
        android:id="@+id/my_order_vp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>