<!-- 标签的背景 label_bg -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 标签选中时的背景 -->
    <item android:state_selected="true">
        <shape>
            <stroke android:width="1dp" android:color="@color/my_color_008CD6" />
            <corners android:radius="5dp" />
            <solid android:color="@color/my_color_white" />
        </shape>
    </item>
    <!-- 标签的正常背景 -->
    <item>
        <shape>
            <stroke android:width="1dp" android:color="#8b8b8b" />
            <corners android:radius="5dp" />
            <solid android:color="@color/my_color_white" />
        </shape>
    </item>
</selector>